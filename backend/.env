# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/pouchify_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pouchify_db
DB_USER=postgres
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=pouchify-super-secret-jwt-key-development-only
JWT_REFRESH_SECRET=pouchify-super-secret-refresh-key-development-only
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_development_key_replace_with_real_key
STRIPE_PUBLISHABLE_KEY=pk_test_development_key_replace_with_real_key
STRIPE_WEBHOOK_SECRET=whsec_development_webhook_secret

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=development_access_key
AWS_SECRET_ACCESS_KEY=development_secret_key
S3_BUCKET_NAME=pouchify-designs-dev
S3_REGION=us-east-1

# SendGrid Configuration
SENDGRID_API_KEY=SG.development_api_key_replace_with_real_key

# Server Configuration
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000,http://localhost:8080,*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/svg+xml,application/illustrator,application/postscript